<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account registration</title>
    <link rel="stylesheet" href="/style/all.css">
    <link rel="stylesheet" href="/style/pages/account-registration.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <header>
            <a href="/">Decode Blog</a>
            <form class="head-search">
                <input type="text" placeholder="Поиск по блогам">
                <button>
                    <img src="/images/icons/search.svg" alt="">
                    <h4>Найти</h4>
                </button>
            </form>
            <div class="registrationAndLogin-buttons">
                <button>Регистрация</button>
                <button onclick="document.location='login-to-account'">Вход</button>
            </div>
        </header>
    </div>
    <div class="container">
        <div class="account-registration-block">
            <h3>Регистрация</h3>
            <form action="/api/signup" method="POST" class="form">
                <input type="email" placeholder="Введите email" required="required" name="email">
                <input type="text" placeholder="Введите полное имя" required="required" name="full_name">
                <input type="password" placeholder="Введите пароль" required="required" name="password">
                <input type="password" placeholder="Подтвердите пароль" required="required" name="re_password">
                <button type="submit">Зарегистрироваться</button>
            </form>
        </div>
    </div>
</body>
</html>