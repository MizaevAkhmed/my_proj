<html lang="en">
<head>
    <%- include('partials/header-with-profile.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Blog</title>
    <link rel="stylesheet" href="/style/all.css">
    <link rel="stylesheet" href="/style/pages/editBlog.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid-block">
        <div class="container">
            <div class="edit-blog">
                <h3>Изменить блог</h3>
                <form action="/api/blog/edit" method="POST" class="form" enctype="multipart/form-data">
                    <div class="blogCreationBlock">
                        <input type="hidden" value="<%=blogs._id%>" name="id"></input>
                        <input type="text" value="<%=blogs.blog_name%>" placeholder="Введите заголовок блога" name="blog_name"></input>
                        <select name="category" id="">
                        <%
                            category.forEach(category => {
                                if(category.id == blogs.category._id){
                        %>
                                    <option value="<%=category.name%>" selected><%=category.name%></option>
                        <%
                                }else{
                        %>
                                    <option value="<%=category.name%>"><%=category.name%></option>
                        <%
                                }
                            })
                        %>
                        </select>
                        <input type="file" class="btn-selectImage" value="<%=blogs.image%>" name="image"></input>
                        <textarea type="text" class="fieldForEnteringAdescription" value="<%=blogs.description%>" placeholder="Введите описание блога" name="description"></textarea>
                    </div>
                    <button type="submit" class="save-btn">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>