<html lang="en">
<head>
    <%- include('partials/header-with-profile.ejs') %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My blogs</title>
    <link rel="stylesheet" href="/style/all.css">
    <link rel="stylesheet" href="/style/pages/my-blogs.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid-block">
        <div class="container">
            <div class="title">
                <h2>Мои блоги</h2>
                <button onclick="document.location='new-blog'">Новый блог</button>
            </div>
            <%
                blogs.forEach(item => {
            %>
            <div class="article">
                <input type="hidden" value="<%=blogs._id%>" name="id">
                <div class="imageOfArticle">
                    <img src="<%=item.image%>" alt="">
                </div>
                <div class="sub-article">
                    <div class="subtitle-name">
                        <h3 class="subtitle" name="blog_name"><a href="blogPageWithAuthorizedUser"><%=item.blog_name%></a></h3>
                        <div class="dropdown">
                            <button class="dropbtn">
                                <img src="/images/icons/Vector.svg" alt="">Ещё</button>
                            <div class="dropdown-content">
                                <a href="/edit/<%=item._id%>" class="edit-btn">Редактировать</a>
                                <button class="delete-btn" onclick="deleteBlog('<%=item._id%>', '<%=item.author._id%>')">Удалить</button>
                            </div>
                        </div>
                    </div>
                    <h5 name="description"><%=item.description%></h5>
                </div>
                <div class="bottom-line">
                    <div class="icon-block">
                        <img src="/images/icons/date.svg" alt="">
                        <h5 name="date"></h5>
                    </div>
                    <div class="icon-block">
                        <img src="/images/icons/visibility.svg" alt="">
                        <h5>21</h5>
                    </div>
                    <div class="icon-block">
                        <img src="/images/icons/icon-message.svg" alt="">
                        <h5>4</h5>
                    </div>
                    <div class="icon-block">
                        <img src="/images/icons/Fill 6.svg" alt="">
                        <h5 name="category"><%=item.category%></h5>
                    </div>
                    <div class="icon-block">
                        <img src="/images/icons/person.svg" alt="">
                        <h5 name="author"><%=item.author.full_name%></h5>
                    </div>
                </div>
            </div>
            <%
                })
            %>
        </div>
        <div class="container-myProfile">
            <div class="photoMyProfile">
                <img src="/images/my blogs photos/avatar.png" alt="">
            </div>
            <div class="brief-info">
                <h4><%=user.full_name%></h4>
                <h5>В основном пишу про веб - разработку, <br>
                    на React & Redux</h5>
                <h5>285 постов за все время</h5>
                <div class="edit-button">
                    <a href="/profile">Редактировать</a>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.min.js" integrity="sha512-NQfB/bDaB8kaSXF8E77JjhHG5PM6XVRxvHzkZiwl3ddWCEPBa23T76MuWSwAJdMGJnmQqM0VeY9kFszsrBEFrQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/JS/deleteBlog.js"></script>
</body>
</html>